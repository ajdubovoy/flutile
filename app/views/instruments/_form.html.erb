<div class="container">
  <div class="row">
    <div class="item">
      <%= simple_form_for [@instrument] do |f| %>
        <%= f.input :name %>
        <%= f.input :price %>
        <%= f.input :location %>
        <%= f.input :description %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.submit "Add an instrument", class: "btn " %>
      <% end %>
    </div>
  </div>
</div>
