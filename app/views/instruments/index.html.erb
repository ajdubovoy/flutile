<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.1) 0%, rgba(0,0,0,0.4) 50%), url('<%= image_path 'flutes.jpg' %>');">
  <div class="banner-content">
    <h1>It's Flutile</h1>
    <p>Rent real instruments everywhere! </p>
    <div class="form-inline" id="search">
      <%= form_tag instruments_path, method: :get do %>
        <%= text_field_tag :query_name,
          params[:query_name],
          class: "form-control input-lg",
          placeholder: "Find an instrument"
        %>
        <%= text_field_tag :query_location,
            params[:query_location],
            class: "form-control input-lg",
            placeholder: "Where?"
          %>
          <%= submit_tag "Search", class: "btn btn-lg btn-danger"%>
      <% end %>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
  <div class="row">
    <% @instruments.each do |instrument| %>
      <div class="col-xs-12 col-sm-6 col-md-3">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path instrument.photo, height: 300, width: 400, crop: :fill %>');">
          <div class="card-category"><%= instrument.location %></div>
          <div class="card-description">
            <h2><%= instrument.name %></h2>
            <p><%= instrument.description[0..30] + '...' %></p>
          </div>
          <%= link_to "", instrument_path(instrument), class: 'card-link' %>
        </div>
      </div>
    <% end %>
  </div>
  </div>
</div>
