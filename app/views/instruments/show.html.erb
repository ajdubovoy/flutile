<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h1><%= @instrument.name %></h1>
      <%= link_to "Back to all instruments", instruments_path %>
      <%= cl_image_tag @instrument.photo, height: 300, width: 400, crop: :fill %>
    </div>
    <div class="col-sm-12 col-md-6">
      <h3>Instrument</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Name</th>
            <th>Description</th>
            <th>Availability</th>
            <th>Price</th>
          </thead>
        </tbody>
      </table>
    </div>
  </div>
</div>
