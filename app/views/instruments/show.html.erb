<div class="banner banner-small" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.1) 0%, rgba(0,0,0,0.4) 50%), url(' height: 300, width: 400, crop: :fill %>');">
  <div class="banner-content">
    <h1><%= @instrument.name %></h1>
    <p>Available for rent in <%= @instrument.location %></p>
  </div>
</div>

<br>

<div class="container">
  <div class="description-and-map">

    <div class="row">
      <% if current_user.nil? %>
        <%= link_to t(".sign_in", default: "Login to book"), new_user_session_path, class: "btn btn-primary" %>
        <% else %>
            <form action="/bookings" method="post" class="form-group form-inline" >
              <input type="text" id="fromDate" placeholder="Start date" name="<%= :start_date %>" class="form-control">
                 <input type="text" id="toDate" placeholder="End date" name="<%= :end_date %>" class="form-control">
                  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                  <%= hidden_field_tag :instrument, @instrument.id %>
              <input type="submit" value="Book this instrument" class="btn btn-primary">
            </form>
      <% end %>
    </div>

    <div class="row">
      <% if policy(@instrument).edit? %>
        <%= link_to "Edit", edit_instrument_path(@instrument), class: 'btn btn-warning' %>
      <% end %>

      <% if policy(@instrument).destroy? %>
        <%= link_to "Delete", instrument_path(@instrument), method: :delete, class: 'btn btn-danger' %>
      <% end %>
    </div>

    <br>

    <div class="row">

      <div
        id="map"
        style="width: 100%; height: 600px;"
        data-marker="<%= @marker.to_json %>"
      ></div>
      <div class="col-sm-6" style="background-image: url('<%= cl_image_path @instrument.photo, height: 300, width: 400, crop: :fill %>'); width: 400px; height: 300px;"> </div>

      <div class="col-sm-6">
        <h3>Description</h3>
        <p><%= @instrument.description %></p>
        <div class="col-sm-3">
        <h3>Price</h3>
        <p>â‚¬<%= @instrument.price %></p>
      </div>
        <div class="col-sm-3">
        <h3>Owned by</h3>
        <p><%= @instrument.user.email %></p>
        </div>
      </div>
    </div>

</div>

  <br>
  <div class="row">
    <%= link_to "Back to all instruments", instruments_path, class: 'btn btn-default' %>
  </div>

</div>
<br>