<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h1><%= @instrument.name %></h1>
      <%= link_to "Back to all instruments", root_path %>
      <%= cl_image_tag @instrument.photo, height: 300, width: 400, crop: :fill %>
    </div>
    <div class="col-sm-12 col-md-6">
      <h3>Instrument</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Name</th>
            <th>Description</th>
            <th>Availability</th>
            <th>Price</th>
          </thead>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <h3>Reviews</h3>
      <% if @instrument.reviews.empty? %>
        <p>Be the first to tell us about its flutility!</p>
      <% else %>
        <ul class="list-group">
          <% @instrument.reviews.each do |review| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <span class="badge badge-primary badge-pill">
                <% counter = 0 %>
                <% 5.times do %>
                  <i class="fa <%= review.rating > counter ? 'fa-star' : 'fa-star-o' %>"></i>
                  <% counter += 1 %>
                <% end %>
              </span>
              <%= review.content %>
            </li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <%= render "reviews/new", instrument: @instrument, review: @review %>
    </div>
  </div>
</div>
