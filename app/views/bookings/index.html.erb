<div class="banner banner-small" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.1) 0%, rgba(0,0,0,0.4) 50%), url('<%= image_path 'flutes.jpg' %>');">
  <div class="banner-content">
    <h1>My Bookings</h1>
    <p>So much upcoming fun!</p>
  </div>
</div>
  <%= link_to 'Message owner', conversations_path(sender_id: current_user.id, receiver_id: @instrument.user.id, instrument: @instrument, booking_id: @booking.id), method: :post, class: 'btn btn-primary'%>
<div class="container">
  <div class="row">
  <div class="row">
    <% @bookings.each do |booking| %>
      <div class="col-xs-12 col-sm-6 col-md-3">
        <div class="card" data-aos="fade" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path booking.instrument.photo, height: 300, width: 400, crop: :fill %>');">
          <div class="card-category"><%= booking.status %></div>
          <div class="card-description">
            <h2><%= booking.instrument.name %></h2>
            <p><%= booking.instrument.description[0..30] + '...' %></p>
          </div>
          <%= link_to "", booking_path(booking), class: 'card-link' %>
        </div>
      </div>
    <% end %>
  </div>
  </div>
</div>
